/* 设置窗口背景颜色为浅色 */
QMainWindow {
    background-color: #FFFFFF;  /* 白色背景 */
    color: #000000;             /* 黑色字体 */
}

/* 按钮样式 */
QPushButton {
    background-color: #F0F0F0;  /* 浅灰色背景 */
    border: 2px solid #D3D3D3;
    border-radius: 5px;
    padding: 10px;
    color: #000000;  /* 黑色字体 */
}

QPushButton:hover {
    background-color: #E0E0E0;  /* 悬停时背景变深 */
}

QPushButton:pressed {
    background-color: #C0C0C0;  /* 按下时背景更深 */
}
